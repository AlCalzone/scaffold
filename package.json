{
  "name": "project-gen",
  "version": "0.0.1",
  "description": "Generate GitHub repositories for new projects",
  "keywords": [],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "bin": {
    "project-gen": "bin/project-gen.js"
  },
  "files": [
    "/bin",
    "/build"
  ],
  "author": {
    "name": "AlCalzone",
    "email": "d.griesel@gmx.net"
  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/project-gen#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/project-gen.git"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/project-gen/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@tsconfig/node14": "^1.0.1",
    "@types/ansi-colors": "^3.2.2",
    "@types/eslint": "^7.28.0",
    "@types/fs-extra": "^9.0.11",
    "@types/json5": "2.2.0",
    "@types/node": "^16.7.10",
    "@types/prettier": "^2.3.2",
    "@types/semver": "^7.3.5",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "colors": "^1.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "^5.1.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.0.0"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^4.22.0",
    "alcalzone-shared": "^3.0.4",
    "ansi-colors": "^4.1.1",
    "axios": "^0.21.4",
    "enquirer": "^2.3.6",
    "eslint": "^7.32.0",
    "fs-extra": "^9.0.0",
    "json5": "^2.1.3",
    "p-limit": "^3.0.2",
    "prettier": "^2.2.1",
    "semver": "^7.3.5",
    "typescript": "~4.4.2",
    "yargs": "^17.0.1"
  },
  "scripts": {
    "linkTemplates": "node --require ts-node/register maintenance/generateTemplateIndex.ts",
    "prebuild:cacheLicenses": "node --require ts-node/register maintenance/cacheLicenses.ts",
    "prebuild:cleanBuildDir": "rimraf ./build",
    "prebuild": "npm run prebuild:cleanBuildDir && npm run linkTemplates && npm run prebuild:cacheLicenses",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles \"templates/**/*.raw.*\" build",
    "watch": "tsc -p tsconfig.build.json --watch",
    "lint:ts": "eslint {src,test,.github,maintenance}/**/*.ts",
    "lint": "npm run lint:ts",
    "release": "release-script",
    "prepublishOnly": "npm run build"
  },
  "readme": "README.md"
}
