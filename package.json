  },
  "license": "MIT",
  "homepage": "https://github.com/AlCalzone/scaffold#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlCalzone/scaffold.git"
  },
  "bugs": {
    "url": "https://github.com/AlCalzone/scaffold/issues"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@tsconfig/node14": "^1.0.1",
    "@types/ansi-colors": "^3.2.2",
    "@types/chai": "^4.2.19",
    "@types/chai-as-promised": "^7.1.4",
    "@types/eslint": "^7.28.0",
    "@types/fs-extra": "^9.0.11",
    "@types/json5": "2.2.0",
    "@types/mocha": "^8.2.2",
    "@types/node": "^16.7.13",
    "@types/prettier": "^2.3.2",
    "@types/proxyquire": "^1.3.28",
    "@types/semver": "^7.3.5",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.4",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.28.5",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "colors": "^1.4.0",
    "copyfiles": "^2.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.0.3",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.0.0"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^4.22.0",
    "alcalzone-shared": "^3.0.4",
    "ansi-colors": "^4.1.1",
    "axios": "^0.21.4",
    "enquirer": "^2.3.6",
    "eslint": "^7.32.0",
    "execa": "^5.1.1",
    "fs-extra": "^9.0.0",
    "json5": "^2.1.3",
    "p-limit": "^3.0.2",
    "prettier": "^2.2.1",
    "semver": "^7.3.5",
    "typescript": "~4.4.2",
    "yargs": "^17.0.1"
  },
  "scripts": {
    "linkTemplates": "node --require ts-node/register maintenance/generateTemplateIndex.ts",
    "prebuild:cacheLicenses": "node --require ts-node/register maintenance/cacheLicenses.ts",
    "prebuild:cleanBuildDir": "rimraf ./build",
    "prebuild": "yarn prebuild:cleanBuildDir && yarn linkTemplates && yarn prebuild:cacheLicenses",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "copyfiles \"templates/**/*.raw.*\" build",
    "watch": "tsc -p tsconfig.build.json --watch",
    "test:ts": "mocha src/**/*.test.ts",
    "test:baselines": "mocha test/generate-baselines.test.ts",
    "pretest": "yarn linkTemplates",
    "test": "yarn test:ts && yarn test:baselines",
    "test:watch": "mocha src/**/*.test.ts --watch",
    "lint:ts": "eslint {src,test,.github,maintenance}/**/*.ts",
    "lint": "yarn lint:ts",
    "release": "release-script",
    "prepublishOnly": "yarn build"
  },
  "readme": "README.md",
  "publishConfig": {
    "access": "public"
  }
}
